<!DOCTYPE html>
<html>
<head>
    <title>Cardiology Doctors</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        .card-img-top {
            height: 200px;
            object-fit: cover;
        }
        .badge-specialty {
            font-size: 0.9rem;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4 text-center">Our Cardiology Doctors</h1>
        <div class="row">
            <% doctors.forEach(function(doctor) { %>
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm">
                        <img src="<%= doctor.image %>" class="card-img-top" alt="<%= doctor.name %>">
                        <div class="card-body">
                            <h5 class="card-title"><%= doctor.name %></h5>
                            <span class="badge bg-danger badge-specialty"><%= doctor.specialty %></span>
                            <p class="card-text mt-2"><strong>Email:</strong> <%= doctor.email %></p>
                            <p class="card-text"><strong>Phone:</strong> <%= doctor.phone %></p>
                            <p class="card-text"><strong>Experience:</strong> <%= doctor.experience %> years</p>
                            <p class="card-text"><strong>About:</strong> <%= doctor.bio %></p>
                            <div>
                                <% if(doctor.socialLinks.twitter) { %>
                                    <a href="<%= doctor.socialLinks.twitter %>" target="_blank" class="me-2 text-info"><i class="fab fa-twitter"></i></a>
                                <% } %>
                                <% if(doctor.socialLinks.linkedin) { %>
                                    <a href="<%= doctor.socialLinks.linkedin %>" target="_blank" class="text-primary"><i class="fab fa-linkedin"></i></a>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</body>
</html>