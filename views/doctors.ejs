  <section id="doctors" class="py-5 bg-light">
    <div class="container">
      <h2 class="text-center fw-bold mb-4 text-primary">Meet Our Doctors</h2>
      <p class="text-center text-muted mb-5">
        Experienced, compassionate, and dedicated professionals at your service.
      </p>

      <div class="row g-4">
        <% const doctors = [
          { name: "Dr. Arjun Mehta", specialty: "Cardiologist", img: "/assets/dileep.jpeg" },
          { name: "Dr. Priya Sharma", specialty: "Neurologist", img: "/assets/dileep.jpeg" },
          { name: "Dr. Rakesh Kumar", specialty: "Orthopedic Surgeon", img: "/assets/dileep.jpeg" },
          { name: "Dr. Ananya Patel", specialty: "Pediatrician", img: "/assets/dileep.jpeg" }
         
        ]; %>

        <% doctors.forEach(doc => { %>
          <div class="col-md-4 col-lg-3">
            <div class="card h-100 border-0 shadow doctor-card">
              <img src="<%= doc.img %>" class="card-img-top" alt="<%= doc.name %>" 
                   style="height: 250px; object-fit: cover;">
              <div class="card-body text-center">
                <h5 class="fw-bold text-dark mb-1"><%= doc.name %></h5>
                <p class="text-muted small"><%= doc.specialty %></p>
                <a href="#" class="btn btn-sm btn-outline-primary rounded-pill">Book Appointment</a>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
    </div>
  </section>



